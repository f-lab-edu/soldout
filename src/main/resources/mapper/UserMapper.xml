<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="api.soldout.io.soldout.mapper.UserMapper">

  <insert id="save" parameterType="api.soldout.io.soldout.dtos.UserDto" useGeneratedKeys = "true" keyProperty="id">
    INSERT INTO user (email, password, name, phone, address)
    VALUES (#{email}, #{password}, #{name}, #{phone}, #{address});
  </insert>

  <select id="findByEmail" parameterType="java.lang.String" resultType="api.soldout.io.soldout.dtos.UserDto">
    SELECT *
    FROM user
    WHERE user.email = #{email};
  </select>

  <select id="isExistEmail" parameterType="java.lang.String" resultType="boolean">
    SELECT if(COUNT(*) = 1, 1, 0)
    FROM user
    WHERE user.email = #{email};
  </select>
</mapper>