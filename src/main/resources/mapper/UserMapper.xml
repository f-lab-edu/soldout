<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="api.soldout.io.soldout.mapper.UserMapper">

  <insert id="signUp" parameterType="api.soldout.io.soldout.dtos.UserDto" useGeneratedKeys = "true" keyProperty="user_id">
    INSERT INTO user (
      email, password, name, phone, address
    )
    VALUES (
      #{email}, #{password}, #{name}, #{phone}, #{address}
    )
  </insert>

  <select id="findByEmail" parameterType="java.lang.String" resultType="api.soldout.io.soldout.dtos.ProductDto">
    SELECT *
    FROM user
    WHERE email = #{email}
  </select>

  <select id="isExistEmail">

  </select>
</mapper>